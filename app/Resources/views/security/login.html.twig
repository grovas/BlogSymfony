{% extends 'base.html.twig' %}

{% block body %}
	{% if error %}
		<div>
			{{ error.messageKey|trans(error.messageData, 'security') }}
		</div>
	{% endif %}
	{% block submenu %} {% endblock %}
	<form action="{{ path('login') }}" method="post">
		<div class="form-group">
			<label
				class="form-control-label col-sm-2 col-form-label"
				for="username">Nr telefonu:</label>
			<input type="text" id="username" name="_username"
				   value="{{ last_username }}" />
		</div>
		<div class="form-group">
			<label class="form-control-label col-sm-2 col-form-label"
				   for="password">Password:</label>
			<input type="password" id="password" name="_password" />
		</div>
		<input type="hidden" name="_target_path" value="/personal/index">
		<div class="form-group row">
			<div class="col-sm-12">
				<button type="submit"
						class="btn btn-primary"
						name="login"
						>Zaloguj siÄ™</button>
			</div>
		</div>
	</form>
{% endblock %}