{% extends 'base.html.twig' %}

{% block body %}
	<div class="pull-right">
	{{ form_start(form) }}
		{{ form_row(form.username, { attr: { class: 'form-control', placeholder: 'Nazwa użytkownika' } }) }}
		{{ form_row(form.email, { attr: { class: 'form-control', placeholder: 'Email' } }) }}
		{{ form_row(form.phone, { attr: { class: 'form-control', placeholder: 'Phone' } }) }}
		{{ form_row(form.password.first, { attr: { class: 'form-control', placeholder: 'Hasło' } }) }}
		{{ form_row(form.password.second, { attr: { class: 'form-control', placeholder: 'Powtórz hasło' } }) }}
		<br>
		<button type="submit" class="btn btn-default">Register</button>
	{{ form_end(form) }}
	</div>
{% endblock %}