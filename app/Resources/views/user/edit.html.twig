{% extends 'base.html.twig' %}

{% block body %}
	{% block menu %} {% endblock %}
	<h1>Edycja swoich danych</h1>
	<div class="pull-left">
		{{ form_start(form) }}
		{{ form_row(form.username, { attr: { class: 'form-control', placeholder: 'Nowa nazwa użytkownika' } }) }}
		{{ form_row(form.email, { attr: { class: 'form-control', placeholder: 'Nowy email' } }) }}
		{{ form_row(form.phone, { attr: { class: 'form-control', placeholder: 'Dokładnie 9 cyfr bez spacji' } }) }}
		{{ form_row(form.password.first, { attr: { class: 'form-control', placeholder: 'Nowe hasło' } }) }}
		{{ form_row(form.password.second, { attr: { class: 'form-control', placeholder: 'Powtórz nowe hasło' } }) }}
		<br>
		<button type="submit" class="btn btn-default">Uaktualnij</button>
		{{ form_end(form) }}
	</div>
{% endblock %}

