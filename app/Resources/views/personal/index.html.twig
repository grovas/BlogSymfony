{% block body %}
	<a href="{{ path('newpost_index') }}">Nowy wpis</a>
{# TODO: dlaczego wyswietla nawias prawo skosny#}
	<table class="table">
		<tbody>
			<tr>
				<th>Numer </th>
				<th>Data utworzenia </th>
				<th>Tytuł </th>
				<th>Post</th>
				<th>Załącznik</th>
